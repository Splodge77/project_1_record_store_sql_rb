<h2>Enter a new album!</h2>

<form class="" action="/albums" method="post">
  <label for="title">Title: </label>
  <input type="text" name="title" value="" id="title_input"/>
  <label for="artist">Artist:
    <select class="" name="artist">
      <% @albums.each do |album| %>
      <option value="<%= album.artist.id %>"><%= album.artist.name %></option>
      <% end %>
    </select>
  </label>
  <label for="retail">Retail Price: </label>
  <input type="number" name="retail" value="" id="retail_input"/>
  <input type="submit" name="" value="Submit"/>
</form>
