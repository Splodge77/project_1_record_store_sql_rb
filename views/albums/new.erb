<h2>Enter a new album!</h2>

<div id="form-wrapper" style="text-align:center; vertical-align:middle">
<form action="/albums" method="post">
  <label for="title">Title: </label>
  <input type="text" name="title" value="" id="title_input"/>
  <label for="artist">Artist:
    <select class="" name="artist_id">
      <% @artists.each do |artist| %>
      <option value="<%= artist.id %>"><%= artist.name %></option>
      <% end %>
    </select>
  </label>
  <label for="retail">Retail Price: </label>
  <input type="number" name="retail" value="" id="retail_input"/>
  <label for="wholesale">Wholesale Price:</label>
  <input type="number" name="wholesale" value="">
  <input type="submit" name="" value="Submit"/>
</form>
<div/>
